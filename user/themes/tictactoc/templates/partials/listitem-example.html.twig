<a class="card  width-33" href="{{ page.url }}">

{% set image = page.media[page.header.image] %}
 

	<span class="card__img">
		<img class="lazyload" data-srcset="{{ image.quality(80).cropResize(400, 300).sizes('100vw').srcset()}}" data-src="{{ image.url }}" data-sizes="{{ image.sizes }}" >

{# 		{{ page.media[page.header.image].quality(80).cropResize(400).sizes('100vw').html(page.title, page.title, page.header.imagealign) }} #}
			
			<small class="card__badge" data-exampletype="{{ page.taxonomy.example_type|first }}"></small>
	</span>
	<span class="card__info">
		<h3>{{ page.title }}</h3>

		{% if uri.path() == '/' %}
			<p>{{ page.header.blurb }}</p>
		{% else %}	
			<p>{{ page.header.blurb|safe_truncate_html(110) }}</p>
  	{% endif %}

  </span>
 	
</a>