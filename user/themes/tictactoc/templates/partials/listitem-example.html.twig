<a class="card  width-33" href="{{ page.url }}">

	<div class="card__img">
		{{ page.media[page.header.image].cropResize(800).html(page.title, page.title ,page.header.imagealign) }}
	</div>
	<div class="card__info">
		<h3>{{ page.title }}</h3>

		{% if uri.path() == '/' %}
			<p>{{ page.header.blurb }}</p>
		{% else %}	
			{{ page.summary|safe_truncate_html(110) }}
  	{% endif %}

  </div>
 	
</a>