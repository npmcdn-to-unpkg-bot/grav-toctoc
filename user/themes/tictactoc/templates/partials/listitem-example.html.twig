<a class="card  width-33" href="{{ page.url }}">

	<div class="card__img">
		{{ page.media[page.header.image].cropResize(800).html() }}
	</div>
	<div class="card__info">
		<h3>{{ page.title }}</h3>

		{% if uri.path() == '/' %}
			<p>{{ page.header.blurb }}</p>
		{% else %}	
			{{ page.summary }}
  	{% endif %}

  </div>
 	
</a>