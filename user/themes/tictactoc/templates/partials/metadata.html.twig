{% for meta in page.metadata %}


	{% if meta.name and grav.language.language == 'fr' %}
		{% if meta.name[:3] == 'fr-' %}

			<meta name="{{ meta.name[3:] }}" {% if meta.content %}content="{{ meta.content }}" {% endif %}/>
		
		{% elseif meta.name[:3] != 'en-' %}

			<meta name="{{ meta.name }}" {% if meta.content %}content="{{ meta.content }}" {% endif %}/>

		{% endif %}


	{% elseif meta.name and grav.language.language == 'en' %}
		{% if meta.name[:3] == 'en-' %}

			<meta name="{{ meta.name[3:] }}" {% if meta.content %}content="{{ meta.content }}" {% endif %}/>

		{% elseif meta.name[:3] != 'fr-' %}

			<meta name="{{ meta.name }}" {% if meta.content %}content="{{ meta.content }}" {% endif %}/>
		
		{% endif %}


	{% else %}

		<meta {% if meta.http_equiv %}http-equiv="{{ meta.http_equiv }}" {% endif %}{% if meta.charset %}charset="{{ meta.charset }}" {% endif %}{% if meta.property %}property="{{ meta.property }}" {% endif %}{% if meta.content %}content="{{ meta.content }}" {% endif %}/>

	{% endif %}
	
{% endfor %}
