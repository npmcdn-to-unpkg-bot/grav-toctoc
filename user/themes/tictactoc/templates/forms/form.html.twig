<div class="alert">{{ form.message }}</div>

<form name="{{ form.name }}" class="contact-form"
      action="{{ uri.rootUrl ~ (form.action|default(page.route)) }}"
      method="{{ form.method|upper|default('POST') }}">
  
  
  <div class="cell cell-in-row cell-67">
    {% for field in form.fields if (field.type) == 'textarea' %}
    {% set value = form.value(field.name) %}
      <div class="formline--textarea">
          {% include "forms/fields/#{field.type}/#{field.type}.html.twig" %}
      </div>
    {% endfor %}
  </div>
  
  <div class="cell cell-in-row cell-33">
    {% for field in form.fields if (field.type) != 'textarea' %}
      {% set value = form.value(field.name) %}
      <div class="formline--text">
          {% include "forms/fields/#{field.type}/#{field.type}.html.twig" %}
      </div>
    {% endfor %}

	  {% for button in form.buttons %}
	    <button class="btn btn-l btn-rouille" type="{{ button.type|default('submit') }}">{% if (button.type) == 'submit' %}<i class="fa fa-paper-plane"></i>{% endif %}{{ button.value|default('Submit') }}</button>
	  {% endfor %}
  </div>

</form>
