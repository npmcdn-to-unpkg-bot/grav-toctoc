<section class="block block--stretch  block--partner">
	
	<div class="block">
		{{ page.content }}


		<ul class="filter">
	    <li><a href="#" data-category-name="js-category-all" class="js-selected">{% if grav.language.getActive == 'fr' %}Toutes cat√©gories{% elseif grav.language.getActive == 'en' %}Show all{% endif %}</a></li>
	    {% for item in page.header.categories %}
	        <li><a href="#" data-category-name="js-category-{{ item.name }}">{{ item.name|capitalize }}</a></li>
	    {% endfor %}
		</ul>


		<div class="cards">
		{% for partner in page.header.partners %}
			<a class="card  card--partner  width-25" href="{{ partner.link }}" data-partner-category="js-category-{{ partner.category }}" target="_new">

				<div class="card__img" href="{{ partner.link }}" target="_new">
					{{ page.media[partner.image].cropResize(300, 300).html() }}
				</div>

				<div class="card__info">
					<h3>{{ partner.name }}</h3>
					<p>{{ partner.text }}</p>
				</div>

			</a>
		{% endfor %}
		</div>

	</div>

</section>