<form name="simple_form" id="simple_form" action="https://getsimpleform.com/messages?form_api_token={{ token | e('html_attr') }}" enctype="multipart/form-data" method="post" class="form--contact">
    <fieldset>
        <div class="cell cell-in-row cell-67">
            <label class="form__field" for="simple_form-field-message">
                <textarea id="simple_form-field-message" name="message" class="ipt ipt--field" placeholder="{{ label.message }}" required="required"></textarea>
            </label>
        </div>

        <div class="cell cell-in-row cell-33">
            <label class="form__line  hidden" for="simple_form-field-name">
                <input type="text" id="simple_form-field-name" name="name" class="ipt ipt--line" placeholder="{{ label.name }}" value="" required="required" />
            </label>
            
            <label class="form__line" for="simple_form-field-email">
                <input type="email" id="simple_form-field-email" name="email" class="ipt ipt--line" placeholder="{{ label.email }}" value="" required="required" />
            </label>
        
            <div class="form__line">
                <button id="simple_form-field-submit" name="submit" class="btn btn-l btn-rouille"><i class="fa fa-paper-plane"></i>{{ label.submit }}</button>
            </div>
        </div>
    </fieldset>

    {# Redirect URL after submit #}
    <input type="hidden" name="redirect_to" value="{{ redirect_to | e('html_attr') }}" />
</form>