{% extends 'partials/base.html.twig' %}

{% set collection = page.collection() %}

{% set childtype = 'example' %}
{# can be "example", "service", "item" #}

{% set childtemplate = 'partials/listitem-' ~ childtype ~ '.html.twig' %}

{% block content %}


<div class="stage">
    <h1 class="beta stage__title"><img class="icon--service" src="{{ page.find('/images').url() }}/{{page.header.icon}}.svg" /><span class="font-light">toctoc</span><span class="font-regular">{{ page.title|ltrim('toctoc') }}</span></h1>

    <div class="stage__img">{{ page.media[page.header.image].quality(100).derivatives(400, 2000, 300).sizes('100vw').html(page.title, page.title, page.header.imagealign) }}</div>
</div>

<section class="block  block--stretch  block--service">

	<div class="block block--subtitle bgcolor-{{ page.header.page_color }}">
		<h2 class="stage__subtitle">{{ page.header.subtitle }}</h2>
	</div>

	<div class="block">
  	{{ page.content }}
  </div>
</section>

{{ pages.find('/welcome/_call-to-action').content }}

<section class="block  block--examples block--stretch">
	<div class="block">
		<h2 class="gamma">{{ page.find('/examples').title }}</h2>
		{% for child in collection %}
	    {% include childtemplate with {'page':child, 'truncate':true} %}
	  {% endfor %}
  </div>
</section>

{% endblock %}
